// Set your location
var geometry = ee.Geometry.Point([28.4937, 36.9707]);  
  // Location 1: [148.7513, -37.3682], South-East Gibbsland, Victoria, Australia
  // Location 2: [147.8203, -36.4065], North-East Gibbsland, Victoria, Australia
  // Location 3: [142.5143, -37.3352], Grampians Region of Western Victoria, Australia
  // Location 4: [152.4332, -30.0202], Dorrigo Plateau of Northern New South Wales, Australia
  // Location 5: [152.4716, -31.3710], Dorrigo Plateau of Northern New South Wales, Australia
  // Location 6: [153.2988, -25.0228], Duling Region, Queensland, Australia
  // Location 7: [-122.9502, 39.8969], Mendocino National Forest, California, USA
  // Location 8: [-85.3273, 30.2055], Florida Panhandle Region, Florida, USA
  // Location 9: [-121.7892, 49.1015], Hope Area, British Columbia, Canada
  // Location 10: [-111.6891, 56.5697], Fort McMurray Region, Alberta, Canada
  // Location 11: [-90.0818, 48.4143], Thunder Bay Region, Ontario, Canada
  // Location 12: [23.8629, 40.1271], Chalkidiki Region, Greece
  // Location 13: [22.4649, 36.7963], Mani Region, Peloponese, Greece
  // Location 14: [23.6692, 38.2105], Attica Region, Greece
  // Location 15: [-7.4151, 40.4763], Serra da Estrela Region, Portugal
  

// NDVI dataset
var ndviDataset = ee.ImageCollection('MODIS/MCD43A4_006_NDVI')
                  .filter(ee.Filter.date('2010-06-01', '2024-06-01'))
                  .select('NDVI');
var ndviVis = {
  min: 0.0,
  max: 1.0,
  palette: [
    'FFFFFF', 'CE7E45', 'DF923D', 'F1B555', 'FCD163', '99B718', '74A901',
    '66A000', '529400', '3E8601', '207401', '056201', '004C00', '023B01',
    '012E01', '011D01', '011301'
  ],
};
Map.addLayer(ndviDataset.mean(), ndviVis, 'NDVI');

// EVI dataset
var eviDataset = ee.ImageCollection('MODIS/006/MOD13A1')
                 .filter(ee.Filter.date('2010-06-01', '2024-06-01'))
                 .select('EVI');
Map.addLayer(eviDataset.mean(), {min: 0.0, max: 1.0, palette: ['blue', 'white', 'green']}, 'EVI');

// LST dataset
var lstDataset = ee.ImageCollection('MODIS/006/MOD11A1')
                  .filter(ee.Filter.date('2010-06-01', '2024-06-01'))
                  .select('LST_Day_1km');
var lstVis = {min: 13000, max: 16500, palette: ['blue', 'green', 'red']};
Map.addLayer(lstDataset.mean(), lstVis, 'LST');

// NDVI Time Series
var ndviTimeSeries = ui.Chart.image.series({
  imageCollection: ndviDataset, 
  region: geometry, 
  reducer: ee.Reducer.mean(), 
  scale: 500
})
.setOptions({
  title: 'NDVI Time Series',
  hAxis: {title: 'Date'},
  vAxis: {title: 'NDVI'},
  lineWidth: 1,
  pointSize: 3
});
print(ndviTimeSeries);

// EVI Time Series
var eviTimeSeries = ui.Chart.image.series({
  imageCollection: eviDataset, 
  region: geometry, 
  reducer: ee.Reducer.mean(), 
  scale: 500
})
.setOptions({
  title: 'EVI Time Series',
  hAxis: {title: 'Date'},
  vAxis: {title: 'EVI'},
  lineWidth: 1,
  pointSize: 3
});
print(eviTimeSeries);

// LST Time Series
var lstTimeSeries = ui.Chart.image.series({
  imageCollection: lstDataset, 
  region: geometry, 
  reducer: ee.Reducer.mean(), 
  scale: 1000
})
.setOptions({
  title: 'LST Time Series',
  hAxis: {title: 'Date'},
  vAxis: {title: 'LST (Kelvin)'},
  lineWidth: 1,
  pointSize: 3
});
print(lstTimeSeries);


//GC: excel formula to get month:
  //=DATE(MID(A2,FIND(",",A2)+2,4), MONTH(DATEVALUE(LEFT(A2,3) & " 1")), 1)

//Measure definitions:
  // NDVI : measures overall level of greeness in a land mass.
  //        NDVI ranges from 0 to 1, where high values indicate healthy vegetation and low values indicate dried or dead vegetation.
  
  // EVI  : same as NDVI, but reduces atmospheric interference and canopy background noise.
  //        EVI ranges from 0 to 7500. Usually, <1000 means low vegetation cover or sparse vegetation, 1001-3000 moderate, and >3001 dense.
  //        EVI can be scaled down by EVI=(Unscaled-1000)/6000
  
  // LST  : estimated surface temperature. To unscale multiply LST by 0.02.
  //        https://stackoverflow.com/questions/73659545/modis-land-surface-temperature-range-very-high
 
